<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#03DAC5"
    card_view:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent="0.72" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent="0.215" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent="0.04" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent="0.95" />

        <TextView
            android:id="@+id/keywords_display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18dp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/textView5"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline14"
            card_view:layout_constraintStart_toStartOf="@+id/guideline11" />

        <TextView
            android:id="@+id/cost_display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18dp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/textView4"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline12"
            card_view:layout_constraintStart_toStartOf="@+id/guideline11" />

        <TextView
            android:id="@+id/title_display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18dp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/textView"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline12"
            card_view:layout_constraintStart_toStartOf="@+id/guideline11" />

        <TextView
            android:id="@+id/genre_display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18dp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/textView3"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline12"
            card_view:layout_constraintStart_toStartOf="@+id/guideline11" />

        <TextView
            android:id="@+id/country_display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18dp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/textView7"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline14"
            card_view:layout_constraintStart_toStartOf="@+id/guideline13" />

        <TextView
            android:id="@+id/year_display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18dp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/textView2"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline12"
            card_view:layout_constraintStart_toStartOf="@+id/guideline11" />

        <TextView
            android:id="@+id/rating_display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18dp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/textView6"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline14"
            card_view:layout_constraintStart_toStartOf="@+id/guideline13" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Country"
            android:textSize="14dp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/year_display"
            card_view:layout_constraintStart_toStartOf="@+id/guideline12" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Cost"
            android:textSize="14dp"
            card_view:layout_constraintStart_toStartOf="@+id/textView5"
            card_view:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="Keywords"
            android:textSize="14dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/guideline10"
            card_view:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textSize="14dp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/cost_display"
            card_view:layout_constraintStart_toStartOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Genre"
            android:textSize="14dp"
            card_view:layout_constraintStart_toStartOf="@+id/textView4"
            card_view:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Year"
            android:textSize="14dp"
            card_view:layout_constraintStart_toStartOf="@+id/textView3"
            card_view:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Title"
            android:textSize="14dp"
            card_view:layout_constraintStart_toStartOf="@+id/textView2"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="69dp"
            android:layout_height="22dp"
            android:text="USD_Cost"
            android:textSize="14dp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/genre_display"
            card_view:layout_constraintEnd_toStartOf="@+id/new_cost_display"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/textView7" />

        <TextView
            android:id="@+id/new_cost_display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18dp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/textView9"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline14"
            card_view:layout_constraintStart_toStartOf="@+id/guideline13" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>